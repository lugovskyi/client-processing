<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="MESSAGE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} | %-25thread | %-18X{sid} | %-5level | %-70logger{70} - %msg%n"/>


    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>
                ${MESSAGE_LOG_PATTERN}
            </Pattern>
        </layout>
    </appender>


    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>